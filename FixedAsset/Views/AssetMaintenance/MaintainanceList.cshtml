@model IEnumerable<FixedAsset.Models.maintenance.maintenance>

@{
    ViewBag.Title = "MaintainanceList";
}







<section id="intro" class="intro">

    <div class="row">

        <div class="wow fadeInDown" data-wow-offset="0" data-wow-delay="0.1s">
            <div style="height:130px">

            </div>
        </div>
    </div>

</section>
<section id="intro" class="intro">

    <div class="row">

        <div class="wow fadeInDown" data-wow-offset="0" data-wow-delay="0.1s">
            <div style="height:130px">

            </div>
        </div>
    </div>

</section>







<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 pad-top">
    <div class="card">
        <br />
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    @*<a href="@Url.Action("Create","Applicant")" class="btn btn-primary btn-lg">Add New</a>*@
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    @*<a href="@Url.Action("Create","Applicant")" class="btn btn-primary btn-lg">Add New</a>*@
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <a href="@Url.Action("Create","AssetMaintenance")" class="btn btn-primary btn-lg">Add New</a>
                    <a href="@Url.Action("MaintainanceList","AssetMaintenance")" class="btn btn-primary btn-lg">List</a>
                </div>
            </div>
        </div>
        <div class="card-header">
            <h2 class="mb-0">MAINTENANCE/REPAIRS</h2>
        </div>


        @if (ViewBag.Message != null)

        {
            <h3 class="alert alert-info">@ViewBag.Message</h3>
        }


        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered basic-main-table">
                    <thead>
                        <tr>
                            <th>Operation Type</th>
                            <th>FA Code</th>
                            <th>Amount</th>
                            <th>Description</th>
                            <th>Maint. Date</th>
                            <th>Maint. Next Date</th>
                            <th>Amount</th>
                            <th>Capitalise Type</th>
                            <th>Debit GL.</th>
                            <th>Credit GL</th>

                            <th>User ID</th>
                            <th>Auth ID</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {

                                <tr>
                                    <td>@item.OperaType</td>
                                    <td>@item.FACode</td>
                                    <td>@item.Amount</td>
                                    <td>@item.Description</td>
                                    <td>@item.MaintDate</td>
                                    <td>@item.NextMaintDate</td>
                                    <td>@item.Amount</td>
                                    <td>@item.CapitaliseTpe</td>
                                    <td>@item.DRAccount</td>
                                    <td>@item.CRAccount</td>
                                    <td>@item.UserID</td>
                                    <td>@item.AuthID</td>

                                    <td class="table-action">

                                        <div class="modal fade" id="myModal">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <a href="#" class="close" data-dismiss="modal">&times;</a>
                                                        <h3 class="modal-title">Delete Employee</h3>
                                                    </div>
                                                    <div class="modal-body">
                                                        <h4>Are you sure ? You want to delete this. </h4>

                                                        <div style="text-align:center;display:none" id="loaderDiv">
                                                            <img src="~/Content/InternetSlowdown_Day.gif" width="150" />
                                                        </div>

                                                    </div>
                                                    <div class="modal-footer">
                                                        <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                                                        <a href="#" class="btn btn-success" onclick="DeleteEmployee()">Confirm</a>
                                                    </div>

                                                </div>

                                            </div>

                                        </div>







                                        <div class="dropdown float-right">
                                            <a href="#" class="dropdown-toggle arrow-none card-drop" data-toggle="dropdown" aria-expanded="false">
                                                Actions<i class="mdi mdi-dots-vertical"></i>
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-right" style="">
                                                <a class="dropdown-item" href="@Url.Action("Edit", "AssetMaintenance", new { Id = item.Id })">
                                                    <i class="la fa fa-edit"></i>
                                                    <span class="kt-nav__link-text">Edit</span>
                                                </a>
                                                <a class="dropdown-item" href="@Url.Action("Delete", "AssetMaintenance", new { Id = item.Id  })">

                                                    <i class="la fa fa-trash"></i>
                                                    <span class="kt-nav__link-text">Delete</span>
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>










                @if (ViewBag.Message != null)
                {
                    <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
                    </script>

                }
            </div>
        </div>
    </div>
</div>
<br />






