                        tr.append('<td>' + trans.FundingGL + '</td>');
                        tr.append('<td>' + trans.AccumDepGL + '</td>');
                        tr.append('<td>' + trans.ExpenseGL + '</td>');
                        tr.append('<td>' + trans.Status + '</td>');


                        $('table').append(tr);
                      

